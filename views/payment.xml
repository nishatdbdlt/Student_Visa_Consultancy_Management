<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Payment Tree View -->
    <record id="view_visa_payment_tree" model="ir.ui.view">
        <field name="name">visa.payment.tree</field>
        <field name="model">visa.payment</field>
        <field name="arch" type="xml">
            <tree string="Payments" decoration-success="state=='paid'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="student_id"/>
                <field name="application_id"/>
                <field name="payment_type"/>
                <field name="amount" sum="Total"/>
                <field name="payment_method"/>
                <field name="payment_date"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='pending'" decoration-success="state=='paid'"/>
            </tree>
        </field>
    </record>

    <!-- Payment Form View -->
    <record id="view_visa_payment_form" model="ir.ui.view">
        <field name="name">visa.payment.form</field>
        <field name="model">visa.payment</field>
        <field name="arch" type="xml">
            <form string="Payment">
                <header>
                    <button name="action_confirm" string="Confirm" type="object"/>
                    <button name="action_paid" string="Mark as Paid" type="object"/>
                    <button name="action_cancel" string="Cancel" type="object"/>
                    <button name="action_reset_draft" string="Reset to Draft" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,pending,paid"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Paid" bg_color="bg-success"/>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="student_id" options="{'no_create': True}"/>
                            <field name="application_id" options="{'no_create': True}"/>
                            <field name="payment_type"/>
                        </group>
                        <group>
                            <field name="amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="payment_method"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="payment_date"/>
                            <field name="due_date"/>
                        </group>
                        <group>
                            <field name="bank_name"/>
                            <field name="transaction_id"/>
                            <field name="cheque_number"/>
                        </group>
                    </group>
                    <group string="Invoice">
<!--                        <field name="invoice_id"/>-->
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Payment notes..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Payment Search View -->
    <record id="view_visa_payment_search" model="ir.ui.view">
        <field name="name">visa.payment.search</field>
        <field name="model">visa.payment</field>
        <field name="arch" type="xml">
            <search string="Search Payments">
                <field name="name"/>
                <field name="student_id"/>
                <field name="application_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                <separator/>
                <filter string="This Month" name="this_month" domain="[('payment_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Student" name="group_student" context="{'group_by': 'student_id'}"/>
                    <filter string="Payment Type" name="group_type" context="{'group_by': 'payment_type'}"/>
                    <filter string="Payment Method" name="group_method" context="{'group_by': 'payment_method'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Payment Date" name="group_date" context="{'group_by': 'payment_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Payment Action -->
    <record id="action_visa_payment" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">visa.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new payment record
            </p>
            <p>
                Track payments from students.
            </p>
        </field>
    </record>
    <menuitem id="menu_visa_payment"
              name="payment"
              parent="menu_visa_students"
              action="action_visa_payment"
              sequence="10"/>

</odoo>