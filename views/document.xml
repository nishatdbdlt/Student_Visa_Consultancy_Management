<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Document Tree View -->
    <record id="view_visa_document_tree" model="ir.ui.view">
        <field name="name">visa.document.tree</field>
        <field name="model">visa.document</field>
        <field name="arch" type="xml">
            <tree string="Documents" decoration-success="state=='verified'" decoration-danger="state=='rejected'">
                <field name="name"/>
                <field name="document_type"/>
                <field name="student_id"/>
                <field name="application_id"/>
                <field name="submission_date"/>
                <field name="is_mandatory" widget="boolean_toggle"/>
                <field name="is_expired" invisible="1"/>
                <field name="state" widget="badge" decoration-info="state=='pending'" decoration-success="state=='verified'" decoration-danger="state=='rejected'"/>
            </tree>
        </field>
    </record>

    <!-- Document Form View -->
    <record id="view_visa_document_form" model="ir.ui.view">
        <field name="name">visa.document.form</field>
        <field name="model">visa.document</field>
        <field name="arch" type="xml">
            <form string="Document">
                <header>
                    <button name="action_receive" string="Mark as Received" type="object"/>
                    <button name="action_verify" string="Verify" type="object"/>
                    <button name="action_reject" string="Reject" type="object"/>
                    <button name="action_reset" string="Reset to Pending"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,received,verified"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Verified" bg_color="bg-success"/>
                    <widget name="web_ribbon" title="Expired" bg_color="bg-danger"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="document_type"/>
                            <field name="student_id" options="{'no_create': True}"/>
                            <field name="application_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="submission_date"/>
                            <field name="verification_date"/>
                            <field name="expiry_date"/>
                            <field name="is_mandatory"/>
                            <field name="is_expired" invisible="1"/>
                        </group>
                    </group>
                    <group string="Attachments">
                        <field name="attachment_ids" widget="many2many_binary" nolabel="1"/>
                    </group>
                    <group string="Verification Details">
                        <field name="verified_by"/>
                        <field name="rejection_reason"/>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1" placeholder="Document notes..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Document Search View -->
    <record id="view_visa_document_search" model="ir.ui.view">
        <field name="name">visa.document.search</field>
        <field name="model">visa.document</field>
        <field name="arch" type="xml">
            <search string="Search Documents">
                <field name="name"/>
                <field name="document_type"/>
                <field name="student_id"/>
                <field name="application_id"/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="Received" name="received" domain="[('state', '=', 'received')]"/>
                <filter string="Verified" name="verified" domain="[('state', '=', 'verified')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <separator/>
                <filter string="Mandatory" name="mandatory" domain="[('is_mandatory', '=', True)]"/>
                <filter string="Expired" name="expired" domain="[('is_expired', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Student" name="group_student" context="{'group_by': 'student_id'}"/>
                    <filter string="Document Type" name="group_type" context="{'group_by': 'document_type'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Application" name="group_application" context="{'group_by': 'application_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Document Action -->
    <record id="action_visa_document" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">visa.document</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_received': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document record
            </p>
            <p>
                Track student documents for visa applications.
            </p>
        </field>
    </record>
    <menuitem id="menu_visa_document"
              name="document"
              parent="menu_visa_students"
              action="action_visa_document"
              sequence="10"/>

</odoo>