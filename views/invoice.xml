<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Invoice Tree View -->
    <record id="view_visa_invoice_tree" model="ir.ui.view">
        <field name="name">visa.invoice.tree</field>
        <field name="model">visa.invoice</field>
        <field name="arch" type="xml">
            <tree string="Invoices" decoration-success="state=='paid'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="student_id"/>
                <field name="invoice_date"/>
                <field name="due_date"/>
                <field name="total_amount" sum="Total"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='sent'" decoration-success="state=='paid'"/>
            </tree>
        </field>
    </record>

    <!-- Invoice Form View -->
    <record id="view_visa_invoice_form" model="ir.ui.view">
        <field name="name">visa.invoice.form</field>
        <field name="model">visa.invoice</field>
        <field name="arch" type="xml">
            <form string="Invoice">
                <header>
                    <button name="action_send" string="Send Invoice" type="object"/>
                    <button name="action_mark_paid" string="Mark as Paid" type="object"/>
                    <button name="action_print_invoice" string="Print" type="object"/>
                    <button name="action_cancel" string="Cancel" type="object"/>
                    <button name="action_reset_draft" string="Reset to Draft" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,paid"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Paid" bg_color="bg-success"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Invoice Details">
                            <field name="student_id" options="{'no_create': True}"/>
                            <field name="application_id" options="{'no_create': True}"/>
                            <field name="payment_id" options="{'no_create': True}" readonly="1"/>
                        </group>
                        <group string="Dates">
                            <field name="invoice_date"/>
                            <field name="due_date"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>

                    <!-- Invoice Lines -->
                    <notebook>
                        <page string="Invoice Lines" name="lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="unit_price" widget="monetary"/>
                                    <field name="tax_percentage"/>
                                    <field name="subtotal" widget="monetary"/>
                                    <field name="tax_amount" widget="monetary"/>
                                    <field name="total" widget="monetary"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="subtotal" widget="monetary"/>
                                <field name="tax_amount" widget="monetary"/>
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="total_amount"/>
                                </div>
                                <field name="total_amount" widget="monetary" class="oe_subtotal_footer_separator"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </page>
                        <page string="Other Info" name="other">
                            <group>
                                <field name="notes" placeholder="Terms and conditions..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Invoice Search View -->
    <record id="view_visa_invoice_search" model="ir.ui.view">
        <field name="name">visa.invoice.search</field>
        <field name="model">visa.invoice</field>
        <field name="arch" type="xml">
            <search string="Search Invoices">
                <field name="name"/>
                <field name="student_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                <separator/>
                <filter string="Overdue" name="overdue" domain="[('due_date', '&lt;', context_today().strftime('%Y-%m-%d')), ('state', '!=', 'paid')]"/>
                <group expand="0" string="Group By">
                    <filter string="Student" name="group_student" context="{'group_by': 'student_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Invoice Date" name="group_date" context="{'group_by': 'invoice_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Invoice Action -->
    <record id="action_visa_invoice" model="ir.actions.act_window">
        <field name="name">Invoices</field>
        <field name="res_model">visa.invoice</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new invoice
            </p>
            <p>
                Invoices are automatically generated from payments.
            </p>
        </field>
    </record>


</odoo>