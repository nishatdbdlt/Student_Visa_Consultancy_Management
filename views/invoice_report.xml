<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Invoice Report Action -->
    <record id="action_report_visa_invoice" model="ir.actions.report">
        <field name="name">Invoice</field>
        <field name="model">visa.invoice</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">student__visa__consultancy__management.report_visa_invoice_document</field>
        <field name="report_file">student__visa__consultancy__management.report_visa_invoice_document</field>
        <field name="binding_model_id" ref="model_visa_invoice"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Invoice Report Template -->
    <template id="report_visa_invoice_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="row">
                            <div class="col-6">
                                <h2>INVOICE</h2>
                                <p>
                                    <strong>Invoice Number:</strong> <span t-field="o.name"/><br/>
                                    <strong>Date:</strong> <span t-field="o.invoice_date"/><br/>
                                    <strong>Due Date:</strong> <span t-field="o.due_date"/>
                                </p>
                            </div>
                            <div class="col-6 text-right">
                                <div t-if="o.company_id">
                                    <strong><span t-field="o.company_id.name"/></strong><br/>
                                    <span t-field="o.company_id.street"/><br/>
                                    <span t-field="o.company_id.city"/>, <span t-field="o.company_id.zip"/><br/>
                                    <span t-field="o.company_id.phone"/>
                                </div>
                            </div>
                        </div>

                        <div class="row mt32">
                            <div class="col-6">
                                <strong>Bill To:</strong>
                                <div>
                                    <span t-field="o.student_id.name"/><br/>
                                    <span t-field="o.student_id.email"/><br/>
                                    <span t-field="o.student_id.phone"/><br/>
                                    <span t-field="o.student_id.street"/><br/>
                                    <span t-field="o.student_id.city"/>
                                </div>
                            </div>
                        </div>

                        <!-- Invoice Lines Table -->
                        <div class="row mt32">
                            <div class="col-12">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Description</th>
                                            <th class="text-right">Quantity</th>
                                            <th class="text-right">Unit Price</th>
                                            <th class="text-right">Tax %</th>
                                            <th class="text-right">Subtotal</th>
                                            <th class="text-right">Tax</th>
                                            <th class="text-right">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.line_ids" t-as="line">
                                            <tr>
                                                <td><span t-field="line.description"/></td>
                                                <td class="text-right"><span t-field="line.quantity"/></td>
                                                <td class="text-right">
                                                    <span t-field="line.unit_price" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                </td>
                                                <td class="text-right"><span t-field="line.tax_percentage"/>%</td>
                                                <td class="text-right">
                                                    <span t-field="line.subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="line.tax_amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="line.total" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Totals -->
                        <div class="row">
                            <div class="col-6 offset-6">
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Subtotal:</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.subtotal" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Tax:</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.tax_amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                    </tr>
                                    <tr class="border-top">
                                        <td><strong>Total:</strong></td>
                                        <td class="text-right">
                                            <strong><span t-field="o.total_amount" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></strong>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!-- Terms and Conditions -->
                        <div class="row mt32" t-if="o.notes">
                            <div class="col-12">
                                <strong>Terms and Conditions:</strong>
                                <p t-field="o.notes"/>
                            </div>
                        </div>

                        <!-- Payment Information -->
                        <div class="row mt32" t-if="o.payment_id">
                            <div class="col-12">
                                <p>
                                    <strong>Payment Reference:</strong> <span t-field="o.payment_id.name"/><br/>
                                    <strong>Payment Method:</strong> <span t-field="o.payment_id.payment_method"/>
                                </p>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>